<ul class="navbar-nav">
    @if (User.Identity != null && User.Identity.IsAuthenticated)
    {
        <li class="nav-item">
            <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Signout">Signout</a>
        </li>
    }
    else
    {
        <li class="nav-item">
            <form method="post" asp-area="" asp-controller="Home" asp-action="Login">
                <input type="hidden" name="returlUrl" value="@(Context.Request.Path+Context.Request.QueryString)" />
                <input type="submit" class="btn nav-link text-dark shadow-none" value="Login" />
            </form>
        </li>
    }
</ul>